<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newsappapifullstackapp.firebase.LoginActivity">


  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:alpha="0.5"
      android:src="@drawable/edited"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="0dp" />


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.529"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.452">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="left"


        android:fontFamily="sans-serif-condensed"

        android:text="Welcome"
        android:textColor="#4B4C50"
        android:textSize="38dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="left"


        android:fontFamily="sans-serif-condensed"

        android:text="Back"
        android:textColor="#4B4C50"
        android:textSize="38dp"
        />


    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/border_round_shape"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textColorHint="#AE636363" />

    <EditText
        android:id="@+id/loginPass"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/border_round_shape"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textColorHint="#AE636363" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInButton"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_50sdp"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gradient_color"
        android:fontFamily="sans-serif-condensed"
        android:text="Log In"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textSize="@dimen/_20sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

      <View
          android:layout_width="100dp"
          android:layout_height="2dp"
          android:layout_gravity="center"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="10dp"
          android:background="@color/black" />


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"

          android:gravity="center"
          android:text="or"
          android:textColor="#636571"

          android:textSize="@dimen/_18sdp" />

      <View
          android:layout_width="100dp"
          android:layout_height="2dp"
          android:layout_gravity="center"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="50dp"
          android:background="@color/black" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUpButtonLogin"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_50sdp"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:background="@drawable/gradient_color"
        android:fontFamily="sans-serif-condensed"
        android:text="Sign up"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textSize="@dimen/_20sdp" />


  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>