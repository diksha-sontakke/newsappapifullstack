<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newsappapifullstackapp.firebase.RegistrationActivity">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:alpha="0.4"
      android:src="@drawable/edited"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="0dp" />


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:gravity="center"
        android:orientation="vertical">





      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:gravity="left"


          android:fontFamily="sans-serif-condensed"

          android:text="Create"
          android:textColor="#3D3D40"
          android:textSize="@dimen/_18sdp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:gravity="left"


          android:fontFamily="sans-serif-condensed"

          android:text="Account"
          android:textColor="#414143"
          android:textSize="@dimen/_18sdp"
          />

      <EditText
          android:id="@+id/regUsername"
          android:layout_width="@dimen/_290sdp"
          android:layout_height="@dimen/_50sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:background="@drawable/border_round_shape"
          android:hint="Username"
          android:inputType="textPersonName"
          android:padding="@dimen/_10sdp"
          android:textColor="@color/black"
          android:textColorHint="@color/black"

          android:textSize="@dimen/_15ssp" />

      <EditText
          android:id="@+id/regEmail"
          android:layout_width="@dimen/_290sdp"
          android:layout_height="@dimen/_50sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:background="@drawable/border_round_shape"
          android:hint="Email Address"
          android:inputType="textEmailAddress"
          android:padding="@dimen/_10sdp"
          android:textColor="@color/black"
          android:textColorHint="@color/black"
          android:textSize="@dimen/_15ssp" />

      <EditText
          android:id="@+id/regPass"
          android:layout_width="@dimen/_290sdp"
          android:layout_height="@dimen/_50sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:background="@drawable/border_round_shape"
          android:hint="Password"
          android:inputType="textPassword"
          android:padding="@dimen/_10sdp"
          android:textColor="@color/black"
          android:textColorHint="@color/black"
          android:textSize="@dimen/_15ssp" />

      <EditText
          android:id="@+id/regConfirmPass"
          android:layout_width="@dimen/_290sdp"
          android:layout_height="@dimen/_50sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:background="@drawable/border_round_shape"
          android:hint="Confirm Password"
          android:inputType="textPassword"
          android:padding="@dimen/_10sdp"
          android:textColor="@color/black"
          android:textColorHint="@color/black"
          android:textSize="@dimen/_15ssp" />


      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/signUpButton"
          android:layout_width="@dimen/_240sdp"
          android:layout_height="@dimen/_50sdp"

          android:layout_marginTop="@dimen/_20sdp"
          android:background="@drawable/gradient_color"
          android:fontFamily="sans-serif-condensed"
          android:text="Sign Up"
          android:textAlignment="center"
          android:textColor="@color/white"
          android:textSize="@dimen/_20sdp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            android:text="or"
            android:textColor="#636571"

            android:textSize="@dimen/_18sdp" />

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:background="@color/black" />

      </LinearLayout>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/logInButtonRegister"
          android:layout_width="@dimen/_240sdp"
          android:layout_height="@dimen/_50sdp"

          android:layout_marginTop="10dp"
          android:layout_marginBottom="@dimen/_25sdp"
          android:background="@drawable/gradient_color"
          android:fontFamily="sans-serif-condensed"
          android:text="LOGIN"
          android:textAlignment="center"
          android:textColor="#6F7071"

          android:textSize="@dimen/_20sdp" />

    </LinearLayout>
  </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>